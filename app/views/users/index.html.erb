<% if @users.any? %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to( image_tag(user.avatar.url(:thumb)), user_path(user) ) %></td>
        <td><%= link_to user.full_name, user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users %>
<% else %>
  <p>No users yet.</p>
<% end %>
