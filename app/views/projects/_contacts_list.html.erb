<% if @project_contacts.any? %>
<table class="team">
  <tbody>
    <% @project_contacts.each do |pc| %>
      <tr>
        <td class="avatar">
        <% if pc.contact %>
          <% if pc.contact.profile_image.url.include? 'svg' %>
          <%= link_to image_tag(pc.contact.profile_image.url(:original)), pc.contact %>
          <% else %>
          <%= link_to image_tag(pc.contact.profile_image.url(:thumb)), pc.contact %>
          <% end %>
          <%= link_to pc.contact.full_name, pc.contact %>
        </td>
        <td><%= pc.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p class="empty">No contacts yet.</p>
<% end %>
