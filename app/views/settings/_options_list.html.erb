<% @option = Option.new %>


<div class="has-limit">
  <div class="row">
    <div class="col-sm-12 col-md-6">

        <div class="info-block-head">
          <span class="edit-toggle fa fa-pencil" aria-hidden="true"></span>
          <span class="close">
            <span class="line two"></span>
            <span class="line three"></span>
          </span>
        </div>

        <div class="info-block-content">
          <ul>
            <li class="current">
              <ul class="full">
                <table class="projects-focus">
                  <tbody>
                    <% @options.each do |option| %>
                    <tr>
                      <td>
                        <h4><%= option.key %></h4>
                      </td>
                      <td>
                        <p><%= option.value %></p>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </ul>
            </li>
          </ul>
          <div class="edit-form">
            <%= form_for(@option) do |f| %>
            <div>
                <% if @option.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>
                    <ul>
                      <% @option.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="edit-pro-info">
                      <div class="form-group edit-pro-contact">
                        <span class="close">
                          <span class="line two"></span>
                          <span class="line three"></span>
                        </span>
                  <div class="form-group edit-pro-contact">
                    <fieldset class="option">
                      <%= f.label :key %>
                      <%= f.text_field :key %>
                    </fieldset>
                     <fieldset class="option">
                      <%= f.label :value %>
                      <%= f.text_field :value %>
                    </fieldset>
                  </div>
                  <div class="actions">
                    <%= f.submit "Save" %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>

  </div>
</div>
