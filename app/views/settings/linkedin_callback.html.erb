<div class="row">
  <div class="col-sm-12 col-md-6">
<% flash.each do |key, value| %>
  <div id="error_explanation"><%= value %></div>
<% end %>
  <div class="bar-header col-sm-12 col-md-12">
      <h2>Add LinkedIn Contact</h2>
      <%= link_to 'Company?', auth_settings_social_networks_linkedin_company_path %>
  </div>
  <div class="col-sm-12 col-md-6">
    <form action="/contacts/create_linkedin" method="post" accept-charset="utf-8">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="edit-pro-info">
        <div class="form-group contact">
          <fieldset class="form-group contact">
            <label>User Name</label>
            <input type="text" name="username" placeholder="username" required>
          </fieldset>
          <fieldset>
            <input style="width:10px;" type="radio" name="contact_type" value="Associate" required>Associate<br>
            <input style="width:10px;" type="radio" name="contact_type" value="Client" required>Client<br>
            <input style="width:10px;" type="radio" name="contact_type" value="Teammate" required>Teammate<br>
            <input style="width:10px;" type="radio" name="contact_type" value="Customer" required>Customer<br>
            <input style="width:10px;" type="radio" name="contact_type" value="Lead" required>Lead<br>
            <input style="width:10px;" type="radio" name="contact_type" value="Partner" required>Partner<br>
          </fieldset>
        </div>
        <input type="submit">
      </div>
    </form>
  </div>
</div>
