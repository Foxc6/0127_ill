<div class="row">
<%= form_for(@user) do |f| %>
    <div class="col-sm-12 col-md-6">
      <div class="bar-header">
        <h2>Edit Contact</h2>
      </div>
      <% if current_user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this contact from being saved:</h2>
        <ul>
        <% current_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
      <% end %>

      <div class="edit-pro-info">
        <div class="form-group edit-pro-img">
          <% if current_user.avatar.present? %>
            <%= image_tag(current_user.avatar.url(:medium)) %>
          <% else %>
            <%= image_tag("/images/medium/missing.png") %>
          <% end %>
          <%= f.file_field :avatar, class: 'form-control'%>
          <a class="img-upload-btn">Upload</a>
        </div>

        <div class="form-group edit-pro-contact">
          <fieldset class="first-name">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
          </fieldset>
          <fieldset class="last-name">
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
          </fieldset>

          <fieldset>
            <%= f.label :email %>
            <%= f.text_field :email %>
          </fieldset>
        </div>
      </div>
      <br>
      
      <div class="actions">
        <%= f.submit "Save" %>
        <%= f.submit "Save and Continue" %>
        <% if current_user %>
        <%= link_to 'Cancel', '/account' %>
        <% else %>
          <%= link_to 'Cancel', '/account' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
