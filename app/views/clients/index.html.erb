<div class="row bar-header full-bg">
  <div class="col-sm-12 col-md-12">
    <div class="has-limit">
      <% flash.each do |key, value| %>
      <div id="error_explanation"><%= value %></div>
      <% end %>
      <h2>Clients</h2>
      <%= link_to '+ New Client', new_client_path %>
    </div>
  </div>
</div>
<div class="row utility-bar">
  <div class="col-sm-12 col-md-12">
    <div class="has-limit">
      <ul class="utility">
        <li>Total: <span class="<%= @total_records_clr %>"><%= @total_records %></span></li>
        <li>Goal: <span class="green"><%= @total_records_goal %></span></li>
        <li class="view list-view current"><i class="fa fa-th-list" aria-hidden="true"></i></li>
        <li class="view grid-view"><i class="fa fa-th" aria-hidden="true"></i></li>
      </ul>
      <br>
      <ul class="main-filter">
        <li class="current"><a href="/clients">All</a></li>
        <li><a href="/clients?filter=positive">Positive</a></li>
        <li><a href="/clients?filter=negative">Negative</a></li>
      </ul>
    </div>
  </div>
</div>
<div class="layout row">
  <%= render :partial => 'clients/grid', :locals => {:contacts => @contacts} %>
  <%= render :partial => 'clients/list', :locals => {:contacts => @contacts} %>
</div>
